//
  -
      #{APPNAME}
      Verison: #{VERSION}


html
  head
    meta(charset="utf-8")
    title #{APPNAME}

    //- Would turn it on if it was set to false.
    if INJECT === false
      each css in htmlWebpackPlugin.files.css
        link(href="#{css}", rel="stylesheet")

  body
    div
      h2 This is a canvas.
      canvas(id="app-canvas" width="1280" height="720" style="width: 853px; height: 480px; background-color: #000")

    div
      h4 Video playback is transferred in canvas.
      div
        button#start-record-btn Start Record
        button#stop-record-btn Stop Record

    video#app-video(src="/demo.mp4" controls="controls" style="display: none" autoplay="autoplay" loop="loop")

    //- Would turn it on if it was set to false.
    if INJECT === false
      div.script-requirement
        each chunk in htmlWebpackPlugin.files.chunks
          script(src="#{chunk.entry}")
